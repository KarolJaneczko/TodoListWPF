<Window x:Class="TodoListWPF.Windows.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:viewmodels="clr-namespace:TodoListWPF.Windows.ViewModels"
        xmlns:converter="clr-namespace:TodoListWPF.Classes.Converters"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" d:DataContext="{d:DesignInstance Type=viewmodels:InputDialogViewModel}"
        Title="Input Dialog" d:DesignWidth="150">

    <Window.Resources>
        <converter:DateOnlyConverter x:Key="DateOnlyConverter"/>
    </Window.Resources>

    <StackPanel Margin="20">
        <TextBlock Text="Task name:"/>
        <TextBox Text="{Binding TaskName}" Margin="0 10 0 0"/>

        <TextBlock Text="Task description:"/>
        <TextBox Text="{Binding TaskDescription}" Margin="0 10 0 0"/>

        <TextBlock Text="Task date:"/>
        <DatePicker SelectedDate="{Binding TaskDate, Converter={StaticResource DateOnlyConverter}, Mode=TwoWay}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
            <Button Content="OK" IsEnabled="{Binding IsAddingEnabled}" Click="OK_Click"/>
            <Button Content="Cancel" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>